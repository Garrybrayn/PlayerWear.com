{% if false %}
    {% section 'banner--collection' %}
{% endif %}

<div class="row collection-body">
    {% section 'product-list__filters' %}
    <div style="flex-grow:1">
        <div class="col-12">
            <div class="col-12 filter__bar">
                <div class="filter__views" style="display: none;">
                    <button class="filter__view hide-mobile view--active"
                            onclick="boosterTheme.toggleCollectionView('card', this);">{% render 'get-icon', icon: 'cardView' %}</button>
                    <button class="filter__view hide-mobile"
                            onclick="boosterTheme.toggleCollectionView('detail', this);">{% render 'get-icon', icon: 'detailView' %}</button>
                </div>
                <div class="filter__dropdown">
                    <i class="filter__icon uil uil-angle-down"></i>
                    <select onchange="boosterTheme.renderSort(this)" id="sort-by">
                        {% for option in collection.sort_options %}
                            <option {% if option.value == collection.sort_by %}selected{% endif %}
                                    value="{{ option.value }}">{{ option.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        {% section 'product-list' %}
    </div>
</div>
<style>
    .collection-body{
        width: 100%;
        display: flex;
        flex-wrap: nowrap;
    }
    @media only screen and (max-width: 767px){
        #shopify-section-product-list__filters{
            display: none;
        }
    }
</style>

<script>
  const collectionInfo = {currentTags: "{{ current_tags | join: ',' | downcase }}"};
</script>

