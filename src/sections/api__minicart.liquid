{% capture cartHTML %}
    <div class="minicart font__size--base">
        <div class="minicart__entries fancy-scroll">
            <h3 class="minicart__title">
                Subtotal: <b>{{ cart.total_price | money | strip_html }}</b>
                {% if cart.items.size > 0 and false %}
                    <a href="{{ routes.cart_url }}">{{ 'general.buttons.view_cart' | t }}</a>
                {% endif %}
            </h3>
            {% for item in cart.items %}
                <div class="minicart__entry">
                    <a class="card__img--container minicart__image" href="/collections/{{ item.vendor | downcase }}{{ item.url }}">
                        <div class="card__img--ratio">
                            <div class="card__img">
                                <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
                            </div>
                        </div>
                    </a>

                    <div class="minicart__info">
                        <a href="/collections/{{ item.vendor | downcase }}{{ item.url }}">{{ item.product.title }}</a>
                        <span class="minicart__variation">{% unless item.product.has_only_default_variant %}{{ item.variant.title }}{% endunless %}</span>
                        <span class="minicart__price">
            <span class="jsPrice">
                {{- item.line_price | money | strip_html -}}
                {%- if item.original_line_price != item.line_price -%}
                    <span class="discount">(saving {{ item.total_discount | money | strip_html }})</span>
                {%- endif -%}
            </span>

          </span>
                        <div class="quantity--input">
                            <button class="quantity--input__button quantity--input__incr"
                                    onclick="boosterCart.quantityHandler(event, false)">-
                            </button><!--
            --><input class="quantity--input__input" value={{ item.quantity }} data-qty-input
                      data-variant-id={{ item.key }} onclick="initQtyOnInput(event)"
                      onchange="boosterCart.updateQuantity(event)" type="number" min="0"
                      {% if item.variant.inventory_management %}max="{{ item.variant.inventory_quantity }}"{% endif %}><!--
            -->
                            <button class="quantity--input__button quantity--input__decr"
                                    onclick="boosterCart.quantityHandler(event, true)">+
                            </button>
                        </div>
                    </div>
                    <span class="minicart__trash"
                          onclick="boosterCart.removeFromCart(this, '{{ item.variant_id }}')">{% render 'get-icon', icon: 'trash' %}</span>
                </div>
            {% else %}
                <div style="text-align: center;">
                    <a href="{{ routes.all_products_collection_url }}"
                       class="empty__cart--icon">{% render 'get-icon', icon: 'shopping-bag' %}</a>
                    <div class="empty__cart--title">{{ 'minicart.empty_text' | t }}</div>
                    {% assign trantext = 'minicart.empty_button' | t %}
                </div>
            {% endfor %}
        </div>
        {% unless cart.items.size == 0 %}
            <div class="minicart__bottom">
                <span class="minicart__total">
                    Estimated Shipping: <span id="chimping">Loading...</span>
                </span>
                <span class="minicart__total">
                    Subtotal ({{ cart.item_count }} item{% unless cart.item_count == 1 %}s{% endunless %}): <span
                            class="jsPrice"><b>{{ cart.total_price | money | strip_html }}</b></span></span>
                {% if customer %}
                    <a class="button button--primary button--filled button--primary__filled button--full-width"
                   href="/pages/pre-checkout">{{ 'general.buttons.checkout' | t }}</a>
                {% else %}
                    {% form 'create_customer' %}
                        <input type="email" style="display:block; padding: 0.5em; width: 100%; margin-bottom: 0.5em" name="customer[email]" id="customerEmailInput" onchange="localStorage.setItem('email', this.value);" placeholder="Enter your email" autofocus />
                        <div class="errors"></div>
                        {% render 'submit-button', text: regt, type: 'primary', class: 'button--submit button--full-width', text: "Checkout" %}
                        <img src="{{ "1x1.png" | asset_url }}" onload="console.log(document.getElementById('customerEmailInput')); document.getElementById('customerEmailInput').value = localStorage.getItem('email');" style="position: absolute"/>
                    {% endform %}
                {% endif %}
            </div>
        {% endunless %}
    </div>
{% endcapture %}

{% capture itemsjson %}
    {
    {%- for item in cart.items %}
        "{{ item.variant_id }}": {{ item.quantity }}{% unless forloop.last %},{% endunless %}
    {% endfor -%}
    }
{% endcapture %}


{
"html": {{ cartHTML | json }},
"item_count": "{{ cart.item_count }}",
"items": {{ itemsjson | json }},
"total": "{{ cart.total_price | money | strip_html }}"
}
