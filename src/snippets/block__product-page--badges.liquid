<div class="product__badges {% if block.settings.noMargin %}margin__bottom--reduced{%endif-%}" {{block.shopify_attributes}}>
{% if block.settings.badge != blank %}
<img class="lazyload" src="{{block.settings.badge | img_url: '10x'}}" data-src="{{block.settings.badge | img_url: '560x'}}" />
{% else %}
<img class="lazyload" data-src="{{'badges.png' | asset_img_url: '560x'}}" />
{% endif %}
</div>